<div class="task-details" id="task-details">
    <div class="task-details-header">
        <span>Task Details</span>
        <div class="details-actions">
            <button class="refresh-logs-btn" id="refresh-details">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="1 4 1 10 7 10"></polyline><polyline points="23 20 23 14 17 14"></polyline><path d="M20.49 9A9 9 0 0 0 5.64 5.64L1 10m22 4l-4.64 4.36A9 9 0 0 1 3.51 15"></path></svg>
                Refresh
            </button>
            <button class="refresh-logs-btn" id="export-details">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
                Export
            </button>
        </div>
    </div>
    <div class="task-details-body" id="task-details-body">
        <div class="empty-state">
            <div class="empty-state-icon">🔍</div>
            <div class="empty-state-text">Select a task to view details and agent activity.</div>
        </div>
        
        <!-- Task details content (hidden by default) -->
        <div class="task-detail-content" id="task-detail-content" style="display: none;">
            <%- include('task-details/task-overview') %>
            <%- include('task-details/task-execution') %>
            <%- include('task-details/task-output') %>
            
            <div class="task-controls">
                <button class="secondary-button" id="pause-task">Pause Task</button>
                <button class="warning-button" id="cancel-task">Cancel Task</button>
                <button id="provide-feedback">Provide Feedback</button>
            </div>
        </div>
    </div>
</div>