    "preact": "^10.10.3",
    "preact-render-to-string": "^5.2.2",
    "pug": "^3.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "sass": "^1.54.4",
    "svelte": "^3.49.0",
    "typescript": "^4.7.4",
    "ua-parser-js": "1.0.2",
    "vavite": "^1.4.1",
    "vite": "^3.0.4",
