    "@types/react-dom": "^17.0.17",
    "@vavite/expose-vite-dev-server": "^1.4.1",
    "@vavite/reloader": "^1.4.1",
    "@vitejs/plugin-legacy": "^2.0.0",
    "@vitejs/plugin-react": "^2.0.1",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/server-renderer": "^3.2.37",
    "ajv": "8.11.0",
    "ajv-formats": "2.1.1",
    "axios": "0.27.2",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "chalk": "^5.0.1",
    "date-and-time": "2.3.1",
    "ejs": "^3.1.8",
    "fastify": "4.0.3",
    "fs-extra": "10.1.0",
    "glob": "^8.0.3",
    "handlebars": "^4.7.8",
    "highlight.js": "^11.6.0",
    "inquirer": "^9.1.0",
    "jsonfile": "^6.1.0",
