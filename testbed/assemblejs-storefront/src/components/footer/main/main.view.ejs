<%# 
  Main Component View
  
  This EJS template defines the HTML structure for your component.
  Key features:
  - Automatically includes styles and client-side script
  - Can use EJS templating syntax (<%= %>, <% %>)
  - Supports partials and includes
  
  Examples:
  - Display dynamic data: <%= componentData.title %>
  - Conditional rendering: <% if (componentData.showHeader) { %> ... <% } %>
  - Loops: <% componentData.items.forEach(item => { %> ... <% }) %>
-%>

<footer class="footer-main">
  <div class="footer-container">
    <div class="footer-grid">
      <!-- Company Information Section -->
      <div class="footer-section">
        <h3 class="footer-heading">AssembleJS Store</h3>
        <p class="footer-description">Your one-stop shop for high-quality products at great prices. Shop with confidence on our secure platform.</p>
        <div class="social-links">
          <a href="#" aria-label="Facebook"><i class="social-icon facebook"></i></a>
          <a href="#" aria-label="Twitter"><i class="social-icon twitter"></i></a>
          <a href="#" aria-label="Instagram"><i class="social-icon instagram"></i></a>
          <a href="#" aria-label="Pinterest"><i class="social-icon pinterest"></i></a>
        </div>
      </div>

      <!-- Quick Links Section -->
      <div class="footer-section">
        <h3 class="footer-heading">Quick Links</h3>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/products/listing">Products</a></li>
          <li><a href="/about/main">About Us</a></li>
          <li><a href="/product/details">Product Details</a></li>
          <li><a href="/checkout/form">Checkout</a></li>
        </ul>
      </div>

      <!-- Customer Service Section -->
      <div class="footer-section">
        <h3 class="footer-heading">Customer Service</h3>
        <ul class="footer-links">
          <li><a href="#">Contact Us</a></li>
          <li><a href="#">FAQs</a></li>
          <li><a href="#">Shipping Policy</a></li>
          <li><a href="#">Returns & Exchanges</a></li>
          <li><a href="#">Privacy Policy</a></li>
        </ul>
      </div>

      <!-- Newsletter Section -->
      <div class="footer-section">
        <h3 class="footer-heading">Newsletter</h3>
        <p>Subscribe to receive updates on new products and special promotions.</p>
        
        <form class="newsletter-form" action="#" method="post">
          <div class="form-group">
            <label for="email" class="sr-only">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="Your email address" 
              aria-label="Email Address" 
              required
            />
            <button type="submit" aria-label="Subscribe">Subscribe</button>
          </div>
          
          <% if (context.data && context.data.subscriptionSuccess) { %>
            <p class="subscription-message success">Thank you for subscribing!</p>
          <% } %>
          
          <% if (context.data && context.data.subscriptionError) { %>
            <p class="subscription-message error"><%= context.data.errorMessage %></p>
          <% } %>
        </form>
      </div>
    </div>

    <!-- Payment Methods -->
    <div class="payment-methods">
      <h3 class="sr-only">Payment Methods</h3>
      <ul class="payment-list">
        <% const paymentMethods = context.data && context.data.paymentMethods || [
          'visa', 'mastercard', 'amex', 'paypal', 'apple-pay'
        ] %>
        
        <% paymentMethods.forEach(method => { %>
          <li class="payment-item">
            <span class="payment-icon <%= method %>" aria-label="<%= method %>"></span>
          </li>
        <% }) %>
      </ul>
    </div>

    <!-- Copyright Section -->
    <div class="copyright">
      <p>&copy; <%= new Date().getFullYear() %> AssembleJS Store. All rights reserved.</p>
      <p>Built with <a href="https://assemblejs.com" target="_blank" rel="noopener noreferrer">AssembleJS</a></p>
    </div>
  </div>
  
  <link href="main.styles.scss" rel="stylesheet"/>
  <script src="main.client.ts"></script>
</footer>