# AssembleJS Environment Configuration

# Server Configuration
ASSEMBLEJS_HOST=0.0.0.0
ASSEMBLEJS_PORT=3000
ASSEMBLEJS_ENVIRONMENT=local
ASSEMBLEJS_ENABLE_REQUEST_LOGS=false
ASSEMBLEJS_LOG_LEVEL=info

# Authentication
ASSEMBLEJS_BASIC_AUTH_USER=your-username
ASSEMBLEJS_BASIC_AUTH_PASSWORD=your-secure-password
ASSEMBLEJS_JWT_SECRET=your-jwt-secret-key
ASSEMBLEJS_JWT_EXPIRES_IN=3600
ASSEMBLEJS_COOKIE_SECRET=your-cookie-secret-key

# SPECSHEET Performance Analysis Tool
# Get your API key from: https://developers.google.com/speed/docs/insights/v5/get-started#APIKey
ASSEMBLEJS_LIGHTHOUSE_API_KEY=
ASSEMBLEJS_PERFORMANCE_THRESHOLD=90
ASSEMBLEJS_REPORTS_DIR=./reports

# Team and Project Information
# ASSEMBLEJS_TEAM_ID=frontend
# ASSEMBLEJS_PROJECT_ID=assemblejs-storefront